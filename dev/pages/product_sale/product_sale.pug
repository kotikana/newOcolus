doctype html
html(lang='en')
	head
		title Ocolus Product on Sale
		link(rel="stylesheet", href="dev/pages/product_sale/product_sale.css")
		link(link rel="shortcut icon" href="img/img_service/favicon.ico" type="image/png")
		link(rel="stylesheet", href="dev/general/fonts/fonts.css")
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css', integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/', crossorigin='anonymous')
	body
		include ../../bem/alter_header/alter_header.pug

		.nav
			a.nav_link
				span.nav_link_item Home
			a.nav_link
				span.nav_link_item Clothing
			a.nav_link
				span.nav_link_item Men
			a.nav_link
				span.nav_link_item Colorful Palm Angels Haze
		.product.layout_product
			.product_sl
				.slider
					.slider_slide
						img.slider_img(src='img/sl1.jpg', alt='img')
					.slider_slide
						img.slider_img(src='img/sl2.jpg', alt='img')
					.slider_slide
						img.slider_img(src='img/sl3.jpg', alt='img')
					.slider_slide
						img.slider_img(src='img/sl4.jpg', alt='img')
					.slider_slide
						img.slider_img(src='img/sl5.jpg', alt='img')
					.slider_slide
						img.slider_img(src='img/sl6.jpg', alt='img')
				.slider2
						.slider2_slide
							img.slider2_slide_img(src='img/slm1.jpg', alt='img')
						.slider2_slide
							img.slider2_slide_img(src='img/slm2.jpg', alt='img')
						.slider2_slide
							img.slider2_slide_img(src='img/slm3.jpg', alt='img')
						.slider2_slide
							img.slider2_slide_img(src='img/slm4.jpg', alt='img')
						.slider2_slide
							img.slider2_slide_img(src='img/slm5.jpg', alt='img')
						.slider2_slide
							img.slider2_slide_img(src='img/slm6.jpg', alt='img')
			.choice
				h2.choice_title Colorful Palm Angels Haze
				.choice_rating
				.choice_price 
					span.choice_price__new $605.00 
					span.choice_price__old $705.00
				.choice_text Octopus - most powerful WordPress theme for your tore online. The best choice for your next personal or multi-vendor marketplace.
				.timer
					h1.timer_title
						<i class="far fa-clock"></i> Expires In
					.timer_div
						.timer_clock._timer
						.timer_text
							span.timer_text-item Days
							span.timer_text-item Hours
							span.timer_text-item Mins
							span.timer_text-item Secs

				.color
					h5.color_title Color
					label.color_label.color_label__yellow(for='yellow')
						input#yellow.color_input(type='radio', name='color', value='red')
						span.color_check
					label.color_label.color_label__grey(for='grey')
						input#grey.color_input(type='radio', name='color')
						span.color_check
					label.color_label.color_label__green(for='green')
						input#green.color_input(type='radio', name='color')
						span.color_check
					label.color_label.color_label__pink(for='pink')
						input#pink.color_input(type='radio', name='color')
						span.color_check
				.size
					h5.size_title Size
					label.size_label
						input.size_check(type='radio', name='size')
						span.size_check__span S
					label.size_label
						input.size_check(type='radio', name='size')
						span.size_check__span M
					label.size_label
						input.size_check(type='radio', name='size')
						span.size_check__span L
					label.size_label
						input.size_check(type='radio', name='size')
						span.size_check__span XL
					label.size_label
						input.size_check(type='radio', name='size')
						span.size_check__span XXL

				.amount
					span.amount_down._minus
					input(type='text', value='01')
					span.amount_up._plus 

			.product_choice_about


			script( src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
			
			script( src="dev/general/libs/slick/slick.js")
			script( src="dev/general/libs/jquery.countdown.js")
			script( src="dev/pages/product_sale/product_sale.js")



